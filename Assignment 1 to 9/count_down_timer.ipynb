      "source": [
        "import time\n",
        "\n",
        "user_input=int(input(\"Enter countdown time in seconds:\")) #take user input in seconds\n",
        "\n",
        "\n",
        "while user_input>0:\n",
        "    print(user_input)\n",
        "    time.sleep(1) #this pause the time with 1 second\n",
        "    user_input-=1 #less the second\n",
        "print(\"Time's up\")"
      ]
    }
  ]
}